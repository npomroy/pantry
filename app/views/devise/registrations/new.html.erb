<div class="container">
  <div class='row'>
    <div class='col-md-4 col-md-offset-4'>
      <div class='well'>
        <% if params[:plan] == '2' %>
          <h2>Pro sign up</h2>
          <p>Sign up for the pro account for $9.99/month and get full access!</p>
          <%= render "pro_form" %>
        <% else %>
          <h2>Basic Sign Up</h2>
          <p>Sign up for free to get limited access</p>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>



