<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h1 class="text-center">Ingredient List</h1>
            <% @ingredients.each do |ingredient| %>
                <div class="well">
                    <%= link_to ingredient_path(id: ingredient.id) do %>
                        <h2><%= ingredient.name %></h2>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
</div>